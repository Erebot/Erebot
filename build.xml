<?xml version="1.0"?>
<project name="Erebot" description="" default="all">
    <property name="phar.stub" value="stub.php"/>

    <fileset dir="." id="phar.files">
        <include name="data/**"/>
        <include name="vendor/erebot/api/**"/>
        <include name="vendor/erebot/dependency-injection/**"/>
        <include name="vendor/erebot/generic-doc/**"/>
        <include name="vendor/erebot/installers/**"/>
        <include name="vendor/erebot/plop/**"/>
        <include name="vendor/pear/console_commandline/**"/>
        <include name="vendor/pear/file_gettext/**"/>
        <include name="vendor/pear/pear_exception/**"/>
        <include name="vendor/composer/composer/LICENSE"/>
        <include name="vendor/composer/composer/src/**"/>
        <include name="vendor/deresh/sfyaml/LICENSE"/>
        <include name="vendor/deresh/sfyaml/lib/**"/>
    </fileset>

    <fileset dir="src/" id="sources">
        <include name="**/*.php"/>
        <exclude name="**/Parser.php"/>
    </fileset>

    <fileset dir="tests/" id="tests">
        <include name="src/*Test.php"/>
    </fileset>

    <target name="all" depends="parser,erebot_buildenv.all" description=""/>

    <target name="release" depends="all,erebot_buildenv.release,release_win"
        description="Build a PHAR package &amp; Windows installer from the current code"/>

    <target name="release_win">
        <echo>Building installer for Erebot v${normalizedVersion}</echo>
        <exec command="EREBOT_VERSION=${normalizedVersion} makensis windows/Erebot.nsi"
            logoutput="true" checkreturn="true"/>
    </target>

    <target name="parser" description="">
        <copy file="data/Styling.y" tofile="src/Erebot/Styling/Parser.y" overwrite="true"/>
        <exec command='"vendor/bin/phplemon" -q -s src/Erebot/Styling/Parser.y' logoutput="true"/>
        <delete file="src/Erebot/Styling/Parser.y"/>
    </target>

    <import file="vendor/erebot/buildenv/build.xml"/>
</project>

