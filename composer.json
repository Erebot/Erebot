{
    "prefer-stable": true,
    "name": "erebot/erebot",
    "description": "A modular IRC bot for PHP 7.0+",
    "keywords": ["IRC", "bot"],
    "homepage": "https://github.com/Erebot/Erebot",
    "license": "GPL-3.0+",
    "authors": [
        {
            "name": "FranÃ§ois Poirotte",
            "email": "clicky@erebot.net",
            "role": "lead"
        }
    ],
    "support": {
        "email": "erebot@erebot.net",
        "issues": "https://github.com/Erebot/Erebot/issues",
        "wiki": "http://erebot.github.io/Erebot/",
        "irc": "irc://irc.iiens.net/Erebot",
        "source": "https://github.com/Erebot/Erebot"
    },
    "require": {
        "php": ">=7.0",
        "ext-ctype": "*",
        "ext-dom": "*",
        "ext-libxml": "*",
        "ext-pcre": "*",
        "ext-Reflection": "*",
        "ext-SimpleXML": "*",
        "ext-sockets": "*",
        "ext-SPL": "*",
        "ext-XML": "*",

        "pear/console_commandline": "*",
        "symfony/dependency-injection": "*",
        "symfony/config": "*",
        "erebot/api": "^0.9.0",
        "erebot/plop": "^0.6.0",

        "erebot/dom": "^0.1.0",
        "erebot/timer": "^0.2.0",
        "erebot/intl": "^0.2.0",
        "erebot/styling": "^0.2.0",
        "erebot/uri": "^0.1.0"
    },
    "require-dev": {
        "composer/composer": "^1.6.0",
        "erebot/buildenv": "^1.5.0",
        "erebot/testenv": "^2.0.0"
    },
    "suggest": {
        "ext-openssl": "*",
        "ext-pcntl": "*",
        "ext-posix": "*"
    },
    "autoload": {
        "psr-4": {
            "Erebot\\": "src/"
        }
    },
    "bin": ["bin/Erebot"],
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        }
    }
}
