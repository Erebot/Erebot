        "erebot/lagchecker-module": "dev-master",
        "erebot/math-module": "dev-master",
        "erebot/minised-module": "dev-master",
        "erebot/pingreply-module": "dev-master",
        "erebot/phpfilter-module": "dev-master",
        "erebot/ratelimiter-module": "dev-master",
        "erebot/roulette-module": "dev-master",
        "erebot/servercapabilities-module": "dev-master",
        "erebot/triggerregistry-module": "dev-master",
        "erebot/tv-module": "dev-master",
        "erebot/uno-module": "dev-master",
        "erebot/watchlist-module": "dev-master",
        "erebot/webgetter-module": "dev-master",
        "erebot/wordlists-module": "dev-master"
    },
    "suggest": {
        "ext-openssl": "*",
        "ext-pcntl": "*",
        "ext-posix": "*"
    },
    "autoload": {
        "psr-0": {
            "Erebot": "src/"
        }
    },
    "bin": ["bin/Erebot"],
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        }
    }
}
