{
    "prefer-stable": false,
    "minimal-stability": "dev",
    "name": "erebot/erebot",
    "description": "A modular IRC bot for PHP 5.2+",
    "keywords": ["IRC", "bot"],
    "homepage": "https://github.com/Erebot/Erebot",
    "license": "GPL-3.0+",
    "authors": [
        {
            "name": "FranÃ§ois Poirotte",
            "email": "clicky@erebot.net",
            "role": "lead"
        }
    ],
    "support": {
        "email": "erebot@erebot.net",
        "issues": "https://github.com/Erebot/Erebot/issues",
        "wiki": "http://erebot.github.io/Erebot/",
        "irc": "irc://irc.iiens.net/Erebot",
        "source": "https://github.com/Erebot/Erebot"
    },
    "require": {
        "php": ">=5.3.0",
        "ext-ctype": "*",
        "ext-dom": "*",
        "ext-libxml": "*",
        "ext-pcre": "*",
        "ext-Reflection": "*",
        "ext-SimpleXML": "*",
        "ext-sockets": "*",
        "ext-SPL": "*",
        "ext-XML": "*",

        "pear/console_commandline": "dev-trunk",
        "pear/pear_exception": "dev-master",
        "fpoirotte/file_gettext": "dev-master",
        "deresh/sfyaml": "dev-master",
        "symfony/dependency-injection": "*",
        "symfony/config": "*",
        "erebot/api": "dev-master",
        "erebot/plop": "dev-master",

        "erebot/dom": "dev-master",
        "erebot/timer": "1.0.*@dev",
        "erebot/intl": "dev-master",
        "erebot/callable-wrapper": "dev-master",
        "erebot/styling": "dev-master",
        "erebot/uri": "dev-master",

        "erebot/installers": "dev-master",
        "erebot/generic-doc": "dev-master"
    },
    "require-dev": {
        "composer/composer": "dev-master",
        "fpoirotte/php_parsergenerator": "dev-master",
        "erebot/buildenv": "dev-master",
        "erebot/testenv": "dev-master",
        "phpunit/phpunit": "<4.0.0",

        "pear/http_request2": "dev-master"
    },
    "suggest": {
        "ext-openssl": "*",
        "ext-pcntl": "*",
        "ext-posix": "*"
    },
    "autoload": {
        "psr-4": {
            "Erebot\\": "src/"
        }
    },
    "bin": ["bin/Erebot"],
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        }
    }
}
