{
    "name": "erebot/erebot",
    "description": "A modular IRC bot for PHP 5.2+",
    "keywords": ["IRC", "bot"],
    "homepage": "https://github.com/Erebot/Erebot",
    "license": "GPL-3.0+",
    "authors": [
        {
            "name": "FranÃ§ois Poirotte",
            "email": "clicky@erebot.net",
            "role": "lead"
        }
    ],
    "support": {
        "email": "erebot@erebot.net",
        "issues": "https://github.com/Erebot/Erebot/issues",
        "wiki": "http://erebot.github.com/Erebot/",
        "irc": "irc://irc.iiens.net/Erebot",
        "source": "https://github.com/Erebot/Erebot"
    },
    "repositories": [
        {
            "type": "composer",
            "url": "http://packages.erebot.net"
        }
    ],
    "require": {
        "php": ">=5.2.2",
        "ext-ctype": "*",
        "ext-dom": "*",
        "ext-intl": "*",
        "ext-libxml": "*",
        "ext-pcre": "*",
        "ext-Reflection": "*",
        "ext-SimpleXML": "*",
        "ext-sockets": "*",
        "ext-SPL": "*",
        "ext-XML": "*",

        "erebot/dependency-injection": "dev-master",
        "erebot/autoconnect-module": "dev-master",
        "erebot/ircconnector-module": "dev-master",
        "erebot/pingreply-module": "dev-master",

        "pear/console_commandline": "dev-trunk",
        "pear/pear_exception": "dev-master",
        "pear/file_gettext": "dev-master",
        "deresh/sfyaml": "dev-master",
        "erebot/api": "dev-master",
        "erebot/plop": "dev-master",
        "erebot/installers": "dev-master",
        "erebot/generic-doc": "dev-master"
    },
    "require-dev": {
        "erebot/buildenv": "dev-master",
        "erebot/testenv": "dev-master"
    },
    "suggest": {
        "ext-openssl": "*",
        "ext-pcntl": "*",
        "ext-posix": "*"
    },
    "autoload": {
        "psr-0": {
            "Erebot": "src/"
        }
    },
    "bin": ["bin/Erebot"],
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        }
    }
}
