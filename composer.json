        "erebot/dependency-injection": "dev-master",
        "erebot/api": "dev-master",
        "erebot/plop": "dev-master",

        "erebot/dom": "dev-master",
        "erebot/timer": "dev-master",
        "erebot/i18n": "dev-master",
        "erebot/callable-wrapper": "dev-master",
        "erebot/styling": "dev-master",
        "erebot/uri": "dev-master",

        "erebot/autoconnect-module": "dev-master",
        "erebot/ircconnector-module": "dev-master",
        "erebot/pingreply-module": "dev-master",

        "erebot/installers": "dev-master",
        "erebot/generic-doc": "dev-master"
